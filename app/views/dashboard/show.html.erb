<div style="margin: 20px">
<img alt="personal avatar image" style="float: right; margin-right: 100px; border: 5px solid #333; width: 8%;
	 border-radius: 100%" src=<%="#{@user.avatar_url}" %>>
	<h1 style="font-family: 'Floral Five Demo'; font-size: 60px; margin-left: 10.5%; text-align: center; margin-bottom: -108px">Touch</h1>
	<h1 style="font-family: 'Floral Five Demo'; font-weight: 500; margin-left: 10%; text-align: center; font-size: 124px;">Grass</h1>	
	<section style="outline: 1px solid #003300; border-radius: 10px; width: 68%; height: 800px; padding-top: 8px; margin-left: 12.5%">
		<h1 style="font-family: 'DJB Emilys Garden'; margin-left: 40px; font-size: 48px">
			<%= @user.name.split(" ").first %>'s Garden</h1>
		<p style="outline: 1px solid #003300; width: 100%; height: 2px; margin-bottom: 10px"></p>
		<h2 style="margin-left: 40px; font-size: 22px; text-decoration: underline 1px solid; text-underline-offset: 3px">Plants</h2>
		<% @user.plants.each do |plant| %>
			<ul>
				<li style="font-style: italic; padding: 1px 0px 1px 0px"><%= "#{plant[:name]}" %></li>
				<li style="padding: 1px 0px 1px 0px"><%= "Quantity: #{plant[:qty]}" %></li>
				<br>
			</ul>
		<% end %>
	</section>
</div>
